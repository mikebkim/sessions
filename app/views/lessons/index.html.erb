<h1>Schedule Lessons</h1>

<div>

    <%= form_for @lesson do |f| %>
    <div class="app-form">
        <%= f.label :subject, "Instrument" %>
        <%= f.text_field :subject %>
    </div>
    <div class="app-form">
        <%= f.label :homework, "Subject" %>
        <%= f.text_field :homework %>
    </div>

    <div class="app-form">
    <%= f.label :time, "Date / Time" %>
    <%= f.datetime_local_field :time %>
    </div>

    <div class="app-actions"><%= f.submit %></div>
    <% end %>

</div>



<% @lessons.each do |lesson| %>
    <div class="app">
        <p> <%= lesson.time %> </p>
        <p> <%= lesson.subject %> </p>
        <p> <%= lesson.homework %> </p>
        <p><%= link_to 'Delete', lesson_path(lesson), method: :delete %></p>
    </div>
<% end %>
